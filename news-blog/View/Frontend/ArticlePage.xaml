<UserControl x:Class="news_blog.View.Frontend.ArticlePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:news_blog.View.Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1200"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="0"
            Orientation="Vertical"
            Margin="15,20">
            <Image
                Height="300"
                Width="300"
                Margin="0,0,0,30"
                Source="{Binding Path=Article.Image}" />
            <Border
                HorizontalAlignment="Left"
                Style="{DynamicResource SearchBorder}">
                <TextBox
                    Width="280"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource SearchTextBox}"
                    Text="Комментарий"/>
            </Border>
            <Border
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Style="{DynamicResource SimpleButtonBorder}"
                Width="200">
                <Button
                    Content="Сохранить"
                    Style="{DynamicResource SimpleButton}"
                    Template="{DynamicResource NoMouseOverButtonTemplate}"
                    Width="180"/>
            </Border>
            <StackPanel
                Margin="0,20"
                Orientation="Horizontal">
                <Image
                    Width="35"
                    Height="35"
                    Source="../../../Images/star.png"/>
                <TextBlock
                    Margin="10, 0"
                    FontSize="18"
                    VerticalAlignment="Center"
                    Text="{Binding Path=Article.Rating}"/>
            </StackPanel>
        </StackPanel>
        <ScrollViewer
            Grid.Column="1"
            Margin="15,20"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock
                    FontSize="32"
                    TextWrapping="Wrap"
                    Text="{Binding Path=Article.Title}"/>
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="24"
                    TextWrapping="Wrap"
                    Text="{Binding Path=Article.ShortText}"/>
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="18"
                    TextWrapping="Wrap"
                    Text="{Binding Path=Article.Text}" />
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="16"
                    HorizontalAlignment="Right"
                    Text="{Binding Path=Article.Created}" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="16"
                    HorizontalAlignment="Right"
                    Text="{Binding Path=Article.Author}"/>
                <TextBlock
                    Margin="0,30,0,0"
                    FontSize="24"
                    FontWeight="Medium"
                    Text="Комментарии"/>
                <StackPanel
                    Margin="0">
                    <ListBox
                        Margin="0,20,0,0"
                        BorderThickness="0"
                        ItemsSource="{Binding Comments}"
                        ItemTemplate="{DynamicResource CommentTemplate}"
                        ItemContainerStyle="{DynamicResource ItemContainer}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
